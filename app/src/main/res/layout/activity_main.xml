<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="276dp"
        android:layout_height="108dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/btnBookMark"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_bookmarks_24"
        android:text="즐겨찾기"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBookSerch"
        app:layout_constraintTop_toBottomOf="@id/Logo" />

    <Button
        android:id="@+id/btnBookSerch"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_baseline_search_24"
        android:text="도서검색"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBookRank"
        app:layout_constraintEnd_toStartOf="@+id/btnBookMark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Logo" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:drawableTop="@drawable/ic_baseline_login_24"
        android:text="@string/Login"
        android:textSize="17dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBookRank"
        app:layout_constraintTop_toBottomOf="@id/btnBookMark" />

    <Button
        android:id="@+id/btnBookRank"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:text="대출 베스트"
        android:textSize="17dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBookSerch" />

</androidx.constraintlayout.widget.ConstraintLayout>